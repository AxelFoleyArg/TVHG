<%- include('./partials/head') %>
<body>
<%- include('./partials/header') %>
  <br>
  <section class="ranking-section">
    <div class="ranking-title">
      <h2>Jugadores Rankeados</h2>
    </div>
    <div class="ranking-wrapper">
      <div class="ranking-container">
        <% users.forEach((user, index) => { %>
          <div class="col-md-12 mb-4">
            <div class="card" style="<% if (index === 0 || index === 1) { %>background-color: #fad25a; <% } else if (index === 2 || index === 3) { %>background-color: silver;<% } else { %>border-color: #ff914c; border-width: 2px;<% } %>">
              <div class="row">
                <!-- Columna de la foto más pequeña -->
                <div class="col-md-2 " style="display: flex; align-items: center; justify-content: center;">
                  <img src="/images/avatars/<%= user.avatar %>" alt="Avatar" class="card-img-top rounded-circle mx-auto mt-3" style="width: 80px; height: 80px; margin: auto;">
                </div>
                <!-- Columna del texto orientado hacia la izquierda -->
                <div class="col-md-8">
                  <div class="card-body">
                    <!-- Nombre (siempre visible) -->
                    <h5 class="card-title text-left"><%= user.name %></h5>
                    <!-- Categoría (visible en escritorio) -->
                    <p class="card-text text-left d-none d-md-block"><strong>Categoría:</strong> <%= user.category %></p>
                  </div>
                </div>
                <!-- Columna de los botones hacia la derecha -->
                <div class="col-md-2" style="display: flex; justify-content: center; align-items: center">
                  <div>
                    <% { %>
                    <h4> <%= user.points %> FPS</h4>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
      
      
      
  </section>
  <%- include('./partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
  </html>




