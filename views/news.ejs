<%- include('./partials/head') %>
<body>
<%- include('./partials/header') %>
  <br>
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h1 style="font-size: 40px"><%= notice.title  %></h1>
        <p style="font-size: 20px">  <%= notice.author %></p>
        <div class="media">
          
            <div>     
              <% var content = notice.content; %>
              <% console.log("Contenido:", content); %>
              <% var parrafos = content.split('*'); %>
              <% console.log("Parrafos:", parrafos); %>
              <% for(var i=0; i<parrafos.length; i++) { %>
                <p><%= parrafos[i] %></p>
              <% } %>
              <% if (locals.isLogged && locals.userLogged.admin == 1) { %>
                <div style="display: flex">
                  <a href="/news/edit/<%= notice.id %>"><button type="button" class="btn btn-outline-light me-2 btn-dark">Editar Informacion</button></a>
                  <form action="/news/delete/<%= notice.id %>/?_method=delete" method="POST">
                    <button type="submit" class="btn btn-outline-light me-2 btn-dark">Borrar Noticia</button>
                  </form>
                  </div>
                <% } %>
            </div>
          
        </div>
      </div>
    </div>
  </div>
  <%- include('./partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
  </html>