<%- include('./partials/head') %>
<body>
<%- include('./partials/header') %>
  <br>
  <section class="calendar-section">
    <div class="ranking-title">
      <h2>Calendario de Eventos</h2>
    </div>
    <div class= "calendar-class">
      <div class="row row-cols-1 row-cols-md-2 g-4">
        <% events.forEach(event => { %>
          <div class="col">
            <div class="card" style="background-image: url(images/eventcard.png); min-height: 300px; background-size:cover; min-height: 300px; background-position:center; background-repeat:no-repeat; border-radius: 15px;">
              <div style="display: flex; justify-content: space-between;">
                <div class="card-image">
                  <img src="/images/copa.png" style="height: 250px; width: 250px;">
                </div>
                <% if (event.played === 1) { %>
                  <div class="card-image">
                    <img src="/images/completed.png" style="height: 250px; width: 250px;">
                  </div>
                <% } %>
              </div>
              <div class="card-body">
                <div class="d-flex flex-column" style="text-align: center;">
                  <h5 class="card-title" style="color:white; font-weight: 300; font-size: 35px; background-color: rgba(255, 145, 76, 0.9); padding: 2px; border-radius: 15px; display: inline-block;"> <%= event.name %> </h5>
                  <p class="card-text" style="color:white; font-weight: 300; font-size: 25px; background-color: rgba(255, 145, 76, 0.9); padding: 4px; border-radius: 15px; display: inline-block;"> Fecha de Inicio: <%= event.date %></p>
                  <a href="/events/<%= event.id %>"><button type="button" class="btn btn-primary">Términos del Torneo e Inscripción</button></a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
    </section>
    <%- include('./partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

</body>
</html>
 