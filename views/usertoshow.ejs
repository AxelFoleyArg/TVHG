<%- include('./partials/head') %>
<body>
<%- include('./partials/header') %>
  <br>
<section class="bg-light">
    <div class="container">
        <div class="row">
            <div class="d-lg-inline-block py-1-9 px-1-9 px-sm-6 mb-1-9 rounded text-center text-lg-left" style="background-color: #ff914c; max-width: 300px; margin: 0 auto;">
                <h3 class="h2 text-white mb-0"><%= user.name %> <%= user.surname %></h3>
            </div>
            <div class="col-lg-12 mb-4 mb-sm-5">
                <div class="card card-style1 border-0">
                    <div class="card-body p-1-9 p-sm-2-3 p-md-6 p-lg-7">
                        <div class="row align-items-center">
                            <div class="col-lg-6 mb-4 mb-lg-0">
                                <img src="/images/avatars/<%= user.avatar %>" alt="..." style="width: 250px; height: 250px; border-radius: 50%; object-fit: cover;">
                            </div>
                            <div class="col-lg-6 px-xl-10">
                                <ul class="list-unstyled mb-1-9 text-start" style="padding-left: 7px;">
                                    <li class="mb-2 mb-xl-3 display-28"><span class="display-26  me-2 font-weight-600" style="color: #ff914c">Categoria:</span> <%= user.category  %> </li>
                                    <li class="mb-2 mb-xl-3 display-28"><span class="display-26  me-2 font-weight-600" style="color: #ff914c">Steam User:</span> <%= user.steam  %> </li>
                                    <li class="mb-2 mb-xl-3 display-28"><span class="display-26  me-2 font-weight-600" style="color: #ff914c">Civiliazaci√≥n Preferida</span> <%= user.civ  %> </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 mb-4 mb-sm-5">
                <div>
                    <span class="section-title mb-3 mb-sm-4" style="color: #ff914c">La Historia de mi Pueblo</span>
                    <p><%= user.description %></p>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12 mb-4 mb-sm-5">
                        <div class="mb-4 mb-sm-5">
                            <span class="section-title mb-3 mb-sm-4" style="color: #ff914c">Skill</span>
                            <div class="progress-text">
                                <div class="row">
                                    <div class="col-6">Team Play</div>
                                    <div class="col-6 text-end"><%= user.teamplay  %>%</div>
                                </div>
                            </div>
                            <div class="custom-progress progress progress-medium mb-3" style="height: 4px;">
                                <div class="animated custom-bar progress-bar slideInLeft bg-secondary" style="width:10%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" role="progressbar"></div>
                            </div>
                            <div class="progress-text">
                                <div class="row">
                                    <div class="col-6">Start</div>
                                    <div class="col-6 text-end"><%= user.start  %>%</div>
                                </div>
                            </div>
                            <div class="custom-progress progress progress-medium mb-3" style="height: 4px;">
                                <div class="animated custom-bar progress-bar slideInLeft bg-secondary" style="width:70%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="70" role="progressbar"></div>
                            </div>                            
                            <div class="progress-text">
                                <div class="row">
                                    <div class="col-6">Tactic</div>
                                    <div class="col-6 text-end"><%= user.tactics  %>%</div>
                                </div>
                            </div>
                            <div class="custom-progress progress progress-medium mb-3" style="height: 4px;">
                                <div class="animated custom-bar progress-bar slideInLeft bg-secondary" style="width:10%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="70" role="progressbar"></div>
                            </div>
                            <div class="progress-text">
                                <div class="row">
                                    <div class="col-6">Imperial Age War</div>
                                    <div class="col-6 text-end"><%= user.imperial  %>%</div>
                                </div>
                            </div>
                            <div class="custom-progress progress progress-medium" style="height: 4px;">
                                <div class="animated custom-bar progress-bar slideInLeft bg-secondary" style="width:10%" aria-valuemax="100" aria-valuemin="0" aria-valuenow="70" role="progressbar"></div>
                            </div>
                        </div>
                        <div>
                            <span class="section-title mb-3 mb-sm-4" style="color: #ff914c">Desafios Pendientes</span>
                            <p>No tiene desafios pendientes</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<%- include('./partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>