<%- include('./partials/head') %>
<body>
<%- include('./partials/header') %>
  <br>
  <main class="container-fluid">
	<div class="row">
		<div class="col-sm-6">
			<div class="card" style="background-color: black; min-height: 300px; background-size:cover; min-height: 300px; background-position:center; background-repeat:no-repeat; border-radius: 5px;">
				<div class="card-image">
				  <img src="/images/copa.png" style="height: 250px; width: 250px;"">
				</div>
				<div class="card-body">
				  <div class="d-flex flex-column" style="text-align: center;">
					<h5 class="card-title" style="color:white; font-weight: 300; font-size: 35px; background-color: rgba(255, 145, 76, 0.9); padding: 2px; border-radius: 15px; display: inline-block;"> <%= event.name %> </h5>
					<p class="card-text" style="color:white; font-weight: 300; font-size: 25px; background-color: rgba(255, 145, 76, 0.9); padding: 4px; border-radius: 15px; display: inline-block;"> Fecha de Inicio: <%= event.date %></p>
				  </div>
				</div>
			  </div>
		</div>
		<div class="col-sm-6">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Último Campeón</h5>
					<p class="card-text"><%= event.last_champion %></p>
				</div>
			</div>
		</div>
	</div>
    <br>
	<div class="row">
		<div class="col">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Modalidad</h5>
					<p class="card-text"><%= event.type  %></p>
					<p class="card-text"><%= event.description %></p>
				</div>
			</div>
		</div>
	</div>
    <br>
	<div class="row">
		<div class="col">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Puntos a repartir</h5>
					<p class="card-text"><%= event.awards %></p>
				</div>
			</div>
		</div>
	</div>
</main>
<%- include('./partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

</body>
</html>
 