<%- include('./partials/head') %>
<body>
<%- include('./partials/header') %>
  <br>
  <main class="container">
    <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
      <!-- Indicadores de carrusel -->
      <ol class="carousel-indicators">
        <li data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#myCarousel" data-bs-slide-to="1"></li>
      </ol>
    
      <!-- Slides de carrusel -->
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/images/lienzo1.png" class="d-block w-100" alt="Imagen 1" style="width: 100%; height: auto; max-height: 500px;">
        </div>
        <div class="carousel-item">
          <a href="/leaderboard"><img src="/images/lienzo.jpg" class="d-block w-100" alt="Imagen 2" style="width: 100%; height: auto; max-height: 500px"></a>
        </div>
      </div>
    
      <!-- Controles de carrusel -->
      <a class="carousel-control-prev" href="#myCarousel" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
      </a>
      <a class="carousel-control-next" href="#myCarousel" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Siguiente</span>
      </a>
    </div>
    <br>
      <div class="row mb-2">
        <% articles.forEach(article => { %>
          <div class="col-md-6" style="min-height: 150px;">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
              <div class="col p-4 d-flex flex-column position-static">
                <strong class="d-inline-block mb-2" style="color: #ff914c">Columna</strong>
                <h3 class="mb-0"><%= article.title  %></h3>
                <p class="card-text mb-auto"> <%= article.author  %></p>
                <button class="btn" style="background-color: #ff914c; color: white;" onclick="window.location.href='/articles/<%= article.id %>'">Leer m치s</button>
              </div>
              <div class="col-auto d-none d-lg-block" style="padding: 20px;">
                <% if (article.id % 2 === 0) { %>
                  <img src="/images/par.png" alt="Descripci칩n de la imagen" class="img-fluid rounded" style="max-height: 200px;">
                <% } else { %>
                  <img src="/images/impar.png" alt="Descripci칩n de la imagen" class="img-fluid rounded" style="max-height: 200px;">
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
      <div class="row g-5">
        <div class="col-md-12">
          <h3 class="pb-4 mb-4 fst-italic border-bottom" style="color:#ff914c; font-size: 45px; font-weight: 600;">
           Noticias de hoy
          </h3>
          <% news.forEach(news => { %>
          <article class="blog-post" style="background-color: #fff; padding: 10px 10px 0px 10px;">
            <h2 class="blog-post-title mb-1"> <strong> <%= news.title %> </strong></h2>
            <p class="blog-post-meta"><%= news.release_date %></p>
            <p> <%= news.synopsis %> <a href="/news/<%= news.id %>">Ver m치s</a></p>
            <hr>
          </article> 
          <% }) %>
        </div>
      </div> 
    </main>
    <%- include('./partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>